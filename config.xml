<?xml version='1.0' encoding='utf-8'?>
<widget id="com.robhaenenroootsj.Roootsj" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Roootsj</name>
    <description>
        A new Roootsj Cordova app.
    </description>
    <author email="robhaenen@roootsj.com" href="http://app.roootsj.com">
        Roootsj Team
    </author>
    <content src="index.html" />
	
	
	
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ee6e73" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
	<preference name="DisallowOverscroll" value="true"/> 
	<preference name="fullscreen" value="false" />
	<preference name="SplashScreen" value="splash"/>
	<preference name="SplashScreenDelay" value = "4000" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />   
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
	
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.3" />
    <plugin name="phonegap-plugin-push" source="npm" spec="~1.8.0">
        <variable name="SENDER_ID" value="509786912381" />
    </plugin>
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
	<plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
	<plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.1" />
	<plugin name="cordova-plugin-network-information" spec="1.3.1" />
	<plugin name="cordova-plugin-device-orientation" spec="~1.0.5" />
	<plugin name="cordova-plugin-inappbrowser" spec="~1.6.1" browserOnly="true"/>
	<plugin name="cordova-plugin-camera" spec="~2.3.1" />
	
    <platform name="android">
		<icon src="icon.png" />
		<icon density="ldpi" platform="android" src="res/icon/android/icon-36-ldpi.png" />
		<icon density="mdpi" platform="android" src="res/icon/android/icon-48-mdpi.png" />
		<icon density="hdpi" platform="android" src="res/icon/android/icon-72-hdpi.png" />
		<icon density="xhdpi" platform="android" src="res/icon/android/icon-96-xhdpi.png" />      
		
		<splash density="ldpi" platform="android" src="res/screen/android/screen-ldpi-portrait.png" />
		<splash density="mdpi" platform="android" src="res/screen/android/screen-mdpi-portrait.png" />
		<splash density="hdpi" platform="android" src="res/screen/android/screen-hdpi-portrait.png" />
		<splash density="xhdpi" platform="android" src="res/screen/android/screen-xhdpi-portrait.png" />        
      
    </platform>
    <platform name="ios">
		<icon platform="ios" height="57" src="res/icon/ios/icon-57.png" width="57" />
		<icon platform="ios" height="72" src="res/icon/ios/icon-72.png" width="72" />
		<icon platform="ios" height="114" src="res/icon/ios/icon-57-2x.png" width="114" />
		<icon platform="ios" height="144" src="res/icon/ios/icon-72-2x.png" width="144" />        
        
       
        <icon height="87" platform="ios" src="www/res/icon/ios/icon-small@3x.png" width="87" />
		
		<splash platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
		<splash platform="ios" height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
		<splash platform="ios" height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
		<splash src="res/screen/ios/splash-750x1334.png"  platform="ios" width="750" height="1334"  /><!-- iPhone6 Portrait -->
		<splash src="res/screen/ios/splash-1242x2208.png"  platform="ios" width="1242" height="2208"  /><!-- iPhone6+ Portrait -->
    </platform>
	
    <access origin="*" />
	<access origin="https://www.facebook.com/" />
	
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
